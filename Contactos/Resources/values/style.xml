<?xml version="1.0" encoding="UTF-8" ?>
<resources>
    <style name="AppCompat" parent="Theme.AppCompat.Light.NoActionBar">
          <item name="colorPrimary">@color/primary</item>
          <item name="colorPrimaryDark">@color/primary_dark</item>
          <item name="colorAccent">@color/primary</item>
          <item name="android:colorPrimaryDark">@color/primary_dark</item>
          <item name="windowActionBar">false</item>
          <item name="windowNoTitle">true</item>
    </style>

    <style name="MyTheme.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="TabLayoutHomeStyle" parent="Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/TabTextHomeStyle</item>
        <item name="tabBackground">@color/primary</item>
        <item name="tabSelectedTextColor">@color/tabSelectedTextColor</item>
        <item name="tabIndicatorColor">@color/white</item>
        <item name="tabIndicatorHeight">4dp</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">fixed</item>
        <item name="tabMaxWidth">0dp</item>
        
    </style>

    <style name="TabTextHomeStyle" parent="TextAppearance.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!--Etiqueta flotante-->
    <style name="AppTheme.FloatingLabel" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/teal</item>
        <item name="android:textSize">@dimen/floating_label</item>
    </style>

    <!--Campo de texto-->
    <style name="AppTheme.EditText" parent="AppCompat">
        <!-- cursor y línea normal-->
        <item name="colorControlNormal">@color/indigo</item>
        <!-- cursor y línea con foco-->
        <item name="colorControlActivated">@color/teal</item>
    </style>

    <!-- mensaje de error debajo del EditText-->
    <style name="AppTheme.EditTextError" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/error</item>
    </style>

    <style name="AppTheme.CharacterCounter" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/teal</item>
    </style>
</resources>
